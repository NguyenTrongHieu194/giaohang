{
  "hosting": {
    "public": ".", // Dấu chấm này nghĩa là thư mục gốc của dự án là public
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  },
  "functions": {
    "source": "functions"
  }
  // Các phần cấu hình khác của bạn (ví dụ: firestore, storage) có thể nằm ở đây
}